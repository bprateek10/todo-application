%section.login-section
  .login-form-div
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-md-6', placeholder: "E-mail"
      .form-group
        = f.password_field :password, autocomplete: "current-password", class: 'form-control col-md-6', placeholder: "Password"
      - if devise_mapping.rememberable?
        .form-check
          = f.check_box :remember_me, class: 'form-check-input'
          = f.label :remember_me
      .form-group
        = f.submit "Log in", class: "btn btn-primary col-md-6"
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        = link_to "Forgot your password?", new_password_path(resource_name)