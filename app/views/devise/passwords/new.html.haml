%section.forgot-password-section
  .forgot-password-form-div
    %h2 Forgot your Password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .form-group
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-md-6', placeholder: "E-mail"
      .form-group
        = f.submit "Send me reset password instructions", class: "btn btn-primary col-md-6"