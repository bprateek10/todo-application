%section.edit-password-section
  .edit-password-form-div
    %h2 Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!      
      = f.hidden_field :reset_password_token
      .form-group
        = f.password_field :password, autocomplete: "current-password", class: 'form-control col-md-6', placeholder: "Password"
      .form-group
        = f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control col-md-6', placeholder: "Password Confirmation"
      .form-group
        = f.submit "Change my password", class: "btn btn-primary col-md-6"