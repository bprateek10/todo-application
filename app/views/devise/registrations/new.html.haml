%section.signup-section
  .signup-form-div
    %h2.form-heading Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-md-6', placeholder: "E-mail"
      .form-group
        = f.password_field :password, autocomplete: "new-password", class: 'form-control col-md-6', placeholder: "Password"
      .form-group
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-md-6', placeholder: "Confirm Password"
      .form-group
        = f.submit "Sign up", class: "btn btn-primary col-md-6"
